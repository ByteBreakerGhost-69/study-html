<!-- kapan menggunakan <em> -->
    <!-- saat kita ingin menekankan sesuatu kata atau frasa tertentu dalam kalimat -->
    <!-- dalam kontek di mana kata tersebut penting untuk diperhatikan oleh pengguna -->
    <!-- saat kita ingin meningkatkan aksesibilitas dan SEO, karena <em> merupakan tag semantik HTML -->

<!-- perbedaan tag <em> dan tag <i> -->
    <!-- tag <em> memberikan makna semantik -->
    <!-- tag <i> hanya memberikan gaya visual (italic) tanpa memberi penekanan semantik -->
